{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "target": "es6",
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react"
  },
  "awesomeTypescriptLoaderOptions": {
    "target": "es5"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ],
  "files": [
    "./typings/declarations.d.ts"
  ]
}