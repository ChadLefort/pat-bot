{
  "name": "pat-bot",
  "version": "0.0.2",
  "description": "A silly Discord bot named after my cat.",
  "license": "MIT",
  "repository": "https://github.com/ChadLefort/pat-bot.git",
  "author": "Chad Lefort",
  "keywords": [
    "discord",
    "bot"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "deploy": "tsc --pretty && node lib/pm2.js",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "build": "npm run clean && npm run lint && echo Using TypeScript && tsc --version && tsc --pretty",
    "test": "npm run build && mocha --compilers ts:ts-node/register --recursive test/**/*-spec.ts",
    "start": "node lib/index.js",
    "start:dev": "nf start -j Procfile-dev",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch"
  },
  "dependencies": {
    "@types/bluebird": "^3.0.33",
    "@types/glob": "^5.0.30",
    "@types/lodash": "^4.14.36",
    "@types/node": "6.0.31",
    "@types/request": "0.0.31",
    "@types/request-promise": "^3.0.32",
    "@types/winston": "0.0.28",
    "bluebird": "^3.4.6",
    "discord.js": "^9.3.0",
    "glob": "^7.1.0",
    "lodash": "^4.16.2",
    "pm2": "^2.0.18",
    "request": "^2.75.0",
    "request-promise": "^4.1.1",
    "typescript": "2.0.0",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "@types/chai": "3.4.30",
    "@types/mocha": "2.2.29",
    "chai": "3.5.0",
    "foreman": "^2.0.0",
    "mocha": "^3.0.1",
    "nodemon": "^1.11.0",
    "rimraf": "^2.5.4",
    "ts-node": "^1.2.2",
    "tslint": "3.14.0-dev.1"
  },
  "engines": {
    "node": "6.7.0"
  }
}
